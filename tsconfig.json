{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "types": [
      "@vue-macros/reactivity-transform/macros-global",
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
  ]
}